{{>header}}
<title>BabyCare - {{blog.metaTitle}}</title>
<meta name="description" content="{{blog.metaDescription}}">
<meta name="keywords" content="{{service.metaKeywords}}">

{{>navbar}}

{{>hero}}

<div class="container-fluid  py-5">
       <div class="row mx-3">
              <div class="col-md-9">
                   <h3 class="text-center bg-primary text-light p-2">{{event.name}} <span class="float-end fs-5 mt-1">{{event.createdAt}}</span> </h3>
                   <p class="text-justify mb-3">{{event.shortDescription}}</p>
                   <img src="/{{event.cover}}" height="400px" width="100%" alt="" class="mb-2">
                   <div class="card p-3">
                        <p class="text-justify mb-3">{{{event.longDescription}}}</p>
                   </div>
              </div>
              <div class="col-md-3">
                <h4 class="bg-primary text-center p-2 text-light">Our Other Events</h4>
                {{#each allEvent}}
                 <a href="/event/{{_id}}" class="d-block bg-primary p-2 mb-1 text-light text-center fs-4 ps-4">{{name}}</a>
                {{/each}}
              </div>
       </div>
</div>


{{>footer}}